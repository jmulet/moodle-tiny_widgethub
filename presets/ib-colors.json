{
    "key": "ib-colors",
    "name": "Foreground and background colors",
    "category": "styles",
    "template": "&nbsp;<span style=\"color:{{_front}};background-color:{{_back}};\" class=\"wh-sty-colors\">Sample text</span>&nbsp;\n",
    "selectors": "span.wh-sty-colors",
    "insertquery": "span.wh-sty-colors",
    "parameters": [
        {
            "name": "_front",
            "title": "Foreground color",
            "bind": "styleRegex('color')",
            "type": "color",
            "value": "#0000ff"
        },
        {
            "name": "_back",
            "title": "Background color",
            "bind": "styleRegex('background-color')",
            "type": "color",
            "value": "#ffffff00"
        }
    ],
    "author": "Josep Mulet <pep.mulet@gmail.com>",
    "version": "1.0.0"
}