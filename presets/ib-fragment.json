{
    "key": "ib-textfragment",
    "name": "$string.ibfragment_name",
    "instructions": "$string.ibfragment_instructions",
    "template": "<p><br></p> <div class=\"twh-fragment {{#notranslate}}notranslate{{/notranslate}}\" data-lang=\"{{_lang}}\" {{#if}}[maxWidth>0]style=\"max-width: {{maxWidth}}px;\"{{/if}}> <h4>{{#I18n}}msg{{/I18n}}:</h4> <div class=\"twh-iq\"> <p>__LOREM__</p> </div> </div> <p><br></p>",
    "insertquery": ".twh-fragment>div.twh-iq",
    "selectors": "div.twh-fragment",
    "unwrap": "div.twh-iq > *",
    "parameters": [
        {
            "name": "_lang",
            "title": "$string.ibfragment_lang",
            "value": "en",
            "options": [
                {
                    "l": "English",
                    "v": "en"
                },
                {
                    "l": "Catalan",
                    "v": "ca"
                },
                {
                    "l": "Spanish",
                    "v": "es"
                },
                {
                    "l": "French",
                    "v": "fr"
                },
                {
                    "l": "German",
                    "v": "de"
                }
            ]
        },
        {
            "name": "maxWidth",
            "value": 0,
            "title": "$string.ibfragment_maxwidth",
            "min": 0,
            "tip": "$string.ibfragment_maxwidth_tip",
            "bind": "styleRegex('max-width:(.*)px', null, 'number')"
        },
        {
            "name": "notranslate",
            "value": false,
            "title": "$string.ibfragment_notranslate",
            "bind": "hasClass('notranslate')"
        }
    ],
    "I18n": {
        "msg": {
            "ca": "FRAGMENT DE TEXT",
            "es": "FRAGMENTO DE TEXTO",
            "en": "TEXT SNIPPET",
            "fr": "FRAGMENT DE TEXTE",
            "de": "TEXTFRAGMENT"
        }
    },
    "author": "Josep Mulet Pol <pep.mulet@gmail.com>",
    "version": "2.0.0"
}