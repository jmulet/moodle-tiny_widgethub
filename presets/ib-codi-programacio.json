{
    "key": "codi-programacio",
    "name": "Codi de programació",
    "instructions": "Utilitzeu aquest snippet per incloure un bloc de codi de programació.\n",
    "template": "<p><br></p> <pre class=\"{{#notranslate}}notranslate {{/notranslate}}iedib-code {{#franges_de_fons}}iedib-code-stripped{{/franges_de_fons}}\"> <code{{^syntax}} class=\"nohighlight\"{{/syntax}}{{#syntax}}{{^lnum}} class=\"nohljsln\"{{/lnum}}{{/syntax}}>{{codi}}</code> </pre> <p><br></p>\n",
    "selectors": "pre.iedib-code",
    "parameters": [
        {
            "name": "franges_de_fons",
            "value": true,
            "title": "Inclou fons de franges",
            "bind": "hasClass <iedib-code-stripped>"
        },
        {
            "name": "notranslate",
            "value": true,
            "title": "Evita que Google tradueixi el codi",
            "bind": "hasClass <notranslate>"
        },
        {
            "name": "codi",
            "value": "console.log('Hello world!');",
            "title": "Codi font",
            "type": "textarea"
        },
        {
            "name": "syntax",
            "value": true,
            "title": "Sintaxi en colors",
            "bind": "<code> not hasClass <nohighlight>"
        },
        {
            "name": "lnum",
            "value": false,
            "title": "Enumera les línies",
            "bind": "<code> not hasClass <nohljsln>",
            "when": "{{syntax}}==1"
        }
    ],
    "requires": "/sd/programacio.min.js | {{syntax}}==1",
    "stars": 2,
    "author": "Josep Mulet Pol <pep.mulet@gmail.com>",
    "version": "2023.01.07"
}