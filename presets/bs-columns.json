{
    "key": "bs-columns",
    "name": "$string.bscolumns_name",
    "category": "bootstrap",
    "instructions": "$string.bscolumns_instructions",
    "engine": "ejs",
    "template": "<div class=\"container-fluid\">\n  <div class=\"row\">\n    <div class=\"col-sm-<%=w1%>\">\n      <p>__LOREM__</p>\n    </div>\n    <div class=\"col-sm-<%=12-w1%>\">\n      <p>__LOREM__</p>\n    </div>\n  </div>\n</div>\n<p><br></p>\n",
    "selectors": [
        "div.container-fluid",
        "div.row"
    ],
    "unwrap": "div.row div > *",
    "parameters": [
        {
            "name": "w1",
            "title": "$string.bscolumns_width",
            "tip": "$string.bscolumns_width_tip",
            "value": 6,
            "options": [
                {
                    "l": "8%",
                    "v": 1
                },
                {
                    "l": "16%",
                    "v": 2
                },
                {
                    "l": "25%",
                    "v": 3
                },
                {
                    "l": "33%",
                    "v": 4
                },
                {
                    "l": "42%",
                    "v": 5
                },
                {
                    "l": "50%",
                    "v": 6
                },
                {
                    "l": "58%",
                    "v": 7
                },
                {
                    "l": "66%",
                    "v": 8
                },
                {
                    "l": "75%",
                    "v": 9
                },
                {
                    "l": "83%",
                    "v": 10
                },
                {
                    "l": "92%",
                    "v": 11
                }
            ],
            "bind": {
                "getValue": "(el) => {\n    var col1 = el.querySelector('div.row > div');\n    var className = col1 ? col1.className : '';\n    var match = /col-sm-(\\d+)/.exec(className) || [];\n    return parseInt(match[1] || '6', 10);\n}\n",
                "setValue": "(el, v) => {\n    var col1 = el.querySelector('div.row > div');\n    var col2 = col1 ? col1.nextElementSibling : null;\n    if (col1 && col2) {\n      col1.className = 'col-sm-' + v;\n      col2.className = 'col-sm-' + (12 - v);\n    }\n}\n"
            }
        }
    ],
    "author": "Josep Mulet <pep.mulet@gmail.com>",
    "version": "2.1.0"
}